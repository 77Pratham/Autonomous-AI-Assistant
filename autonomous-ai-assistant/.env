# --- Application Configuration ---
FLASK_APP=app/main.py
FLASK_RUN_HOST=0.0.0.0
FLASK_ENV=development
PYTHONPATH=/usr/src/app

# --- API Keys (Add your actual keys here) ---
# OPENAI_API_KEY=your_openai_api_key_here
# HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# --- Google Services (for future use) ---
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# GMAIL_CLIENT_ID=your_gmail_client_id
# GMAIL_CLIENT_SECRET=your_gmail_client_secret
# GOOGLE_CALENDAR_CLIENT_ID=your_calendar_client_id
# GOOGLE_CALENDAR_CLIENT_SECRET=your_calendar_client_secret

# --- Database Configuration (for future use) ---
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_assistant
# SQLITE_DB_PATH=/usr/src/app/data/assistant.db

# --- Security Settings ---
# SECRET_KEY=your_secret_key_here
# JWT_SECRET_KEY=your_jwt_secret_here
# ENCRYPTION_KEY=your_encryption_key_here

# --- Logging Configuration ---
LOG_LEVEL=INFO
LOG_FILE=/usr/src/app/logs/assistant.log

# --- RAG System Configuration ---
RAG_MODEL_NAME=all-MiniLM-L6-v2
RAG_DATA_DIR=/usr/src/app/data/faiss_index

# --- n8n Configuration ---
N8N_WEBHOOK_URL=http://localhost:5678/webhook/ai-command

# --- Development Settings ---
DEBUG=true
TESTING=false